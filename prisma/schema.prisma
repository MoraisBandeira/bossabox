
generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Tool {
  id          Int      @id @default(autoincrement())
  title       String
  link        String
  description String
  tags        Tag[]
}

model Tag {
  id      Int     @id @default(autoincrement())
  name    String
  toolId  Int
  tool    Tool    @relation(fields: [toolId], references: [id])
}
